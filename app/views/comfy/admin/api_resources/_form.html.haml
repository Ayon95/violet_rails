= form_for @api_resource do |f|
  - if @api_resource.errors.any?
    #error_explanation
      %h2= "#{pluralize(@api_resource.errors.count, "error")} prohibited this api_resource from being saved:"
      %ul
        - @api_resource.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :api_namespace
    = f.text_field :api_namespace
  .field
    = f.label :properties
    = f.text_field :properties
  .actions
    = f.submit 'Save'
