= form_for @call_to_action do |f|
  - if @call_to_action.errors.any?
    #error_explanation
      %h2= "#{pluralize(@call_to_action.errors.count, "error")} prohibited this call_to_action from being saved:"
      %ul
        - @call_to_action.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :cta_type
    = f.select :cta_type, options_for_select(CallToAction::ACTION_TYPES)
  
  = f.rich_text_area :content
  .actions
    = f.submit 'Save'
