<% og_image = og_image_url(Subdomain.current) %>
<%= display_meta_tags site: forum_html_title(Subdomain.current),
                      title: html_title(Subdomain.current),
                      description: site_description(Subdomain.current),
                      keywords: site_keywords(Subdomain.current),
                      og: {
                        image: og_image,
                        title: @page_title,
                        description: @page_description
                      },
                      twitter: {
                        image: {
                          _: og_image,
                          width: 1200,
                          height: 628,
                          title: @page_title,
                          description: @page_description
                        },
                        card: 'summary_large_image',
                      } %>